    "version": "2.0.0",
    "tasks": [
        {
            "label": "quickcommit",
            "type": "shell",
            "command": "git add . && git commit -am \"autocommit\" && git push -u main main"
        },
        {
            "label": "quickpull",
            "type": "shell",
            "command": "git pull main main"
        }
    ]
}